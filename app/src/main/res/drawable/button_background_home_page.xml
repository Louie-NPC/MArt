<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/> <!-- Adjust the radius to get the curved effect -->
            <gradient
                android:startColor="#FFD700"
                android:endColor="#AFEEEE"
                android:angle="45"/> <!-- Adjust the angle to control gradient direction -->
            <stroke
                android:width="2dp"
                android:color="#AFEEEE"/> <!-- Border color, adjust as needed -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/> <!-- Adjust the radius to match the inner shape -->
            <solid android:color="#AFEEEE"/> <!-- Background color of the button -->
        </shape>
    </item>
</layer-list>
