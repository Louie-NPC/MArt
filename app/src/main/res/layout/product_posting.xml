<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_posting_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-365dp"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/home_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="POST"
            android:textColor="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="New post"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        android:src="@drawable/placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_posting_header" />

    <ScrollView
        android:id="@+id/product_desc"
        android:layout_width="270dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/placeholder"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:background="@android:color/transparent"/>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_title_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_desc"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/title_desc_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add title"

            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edit_title_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="rawr"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"

            app:layout_constraintStart_toEndOf="@id/title_desc_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_size_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_title_header"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/size_desc_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size"

            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/small_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/size_desc_head"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Small"
            android:background="@drawable/rounded_gray"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/medium_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/size_desc_head"
            app:layout_constraintStart_toEndOf="@id/small_button"
            android:layout_marginLeft="5dp"
            android:text="Medium"
            android:background="@drawable/rounded_gray"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/large_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/size_desc_head"
            app:layout_constraintStart_toEndOf="@id/medium_button"
            android:layout_marginLeft="5dp"
            android:text="Large"
            android:background="@drawable/rounded_gray"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/extra_large_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/size_desc_head"
            app:layout_constraintStart_toEndOf="@id/large_button"
            android:layout_marginLeft="5dp"
            android:text="Extra Large"
            android:background="@drawable/rounded_gray"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_status_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_size_header"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/status_desc_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Status"

            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edit_status_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="rawr"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"

            app:layout_constraintStart_toEndOf="@id/status_desc_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/products_tags_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_status_header"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tag_desc_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Tags"

            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edit_tags_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="rawr"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"

            app:layout_constraintStart_toEndOf="@id/tag_desc_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>